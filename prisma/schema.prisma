generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Project {
  id String @id @default(uuid()) @db.Uuid
  org_id String @db.Uuid
  name String
  createdAt DateTime @default(now()) @db.Timestamp
  updatedAt DateTime @default(now()) @db.Timestamp
}

model Organization {
  id String @id @default(uuid()) @db.Uuid
  name String
  createdAt DateTime @default(now()) @db.Timestamp
  updatedAt DateTime @default(now()) @db.Timestamp
}